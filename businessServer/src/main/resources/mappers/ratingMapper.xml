<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.neu.mapper.RatingMapper">
    <select id="find" resultType="com.neu.model.Rating">
        select * from rating where uid=#{uid} and mid=#{mid}
    </select>

    <insert id="add" parameterType="com.neu.model.Rating">
        insert into rating values (#{uid},#{mid},#{score},#{timestamp})
    </insert>

    <update id="update" parameterType="com.neu.model.Rating">
        update rating set score=#{score},`timestamp`=#{timestamp} where uid=#{uid} and mid=#{mid}
    </update>

</mapper>