<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.neu.mapper.TagMapper">
    <select id="find" resultType="com.neu.model.Tag">
        select * from tag where uid=#{uid} and mid=#{mid}
    </select>

    <insert id="add" parameterType="com.neu.model.Tag">
        insert into tag values (#{uid},#{mid},#{tag},#{timestamp})
    </insert>

    <delete id="delete" parameterType="com.neu.model.Tag">
        delete from tag where uid=#{uid} and mid=#{mid} and tag=#{tag}
    </delete>
</mapper>